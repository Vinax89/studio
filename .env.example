# Public-facing Firebase API key for the client SDK.
NEXT_PUBLIC_FIREBASE_API_KEY=REPLACE_WITH_VALUE

# Firebase Auth domain for authentication flows.
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=REPLACE_WITH_VALUE

# Firebase project containing the storage bucket.
NEXT_PUBLIC_FIREBASE_PROJECT_ID=REPLACE_WITH_VALUE

# Default Cloud Storage bucket for uploads.
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=REPLACE_WITH_VALUE

# Firebase Cloud Messaging sender ID for push notifications.
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=REPLACE_WITH_VALUE

# Firebase application ID for the web client.
NEXT_PUBLIC_FIREBASE_APP_ID=REPLACE_WITH_VALUE

# Optional origin for Cloud Functions requests. Defaults to relative /api path.
# NEXT_PUBLIC_FUNCTIONS_ORIGIN=REPLACE_WITH_VALUE

# Number of days to retain files before deletion.
RETENTION_DAYS=REPLACE_WITH_VALUE

# Shared secret expected in the `X-CRON-SECRET` header for housekeeping runs.
CRON_SECRET=REPLACE_WITH_VALUE

# Optional IANA timezone used when synchronizing time with the network. Defaults to the system timezone.
# DEFAULT_TZ=Etc/UTC

# Comma-separated list of allowed request origins for CORS. Regex patterns may be wrapped in `/`.
# ALLOWED_ORIGINS=https://example.com

# Minimum log level to output (`info`, `warn`, or `error`). Defaults to `info`.
LOG_LEVEL=info
